extends ./templates/template

block vars
    - var pageTitle = 'ТД Время'
    - var main = true
    - var pageId = 1

block header
    .header-intro-wrap
        +header({})
        +intro({
        })
block content
    main.content
    +main-slider({
        items: slider,
        mix: 'content__main-slider',
        js: 'down'
    })
    +agency({
        mix: 'content__agency',
        items: agency
    })
    +features({
        items: features,
        mix: 'content__features',
    })
    +news({
        items: news
    })
block video
    +modal({
        js: 'modal-video',
        video: true,
        mod: 'video',
    })
