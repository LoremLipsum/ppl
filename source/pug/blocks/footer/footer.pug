mixin footer(data)
    -
        var companyNav = [
            'Компания',
            'Производство',
            'FAQ',
            'Сертификаты',
            'Статьи',
            'Контакты',
        ];
    -
        var productionNav1 = [
            'DUNE Silver Label',
            'DUNE Red Label',
            'DUNE Blue Label',
            'EUROPE classical quality',
            'FANTOM Classic Blue',
            'FANTOM Classic Red',
        ];
    -
        var productionNav2 = [
            'VXR Elegant Red',
            'VXR Elegant Silver',
            'Біле Сонце класичні',
            'Біле Сонце оригінальні',
        ];


    +el({
        tag: 'footer',
        class: 'footer',
        mix: data.mix,
        mod: data.mod,
        js: data.js,
    })&attributes(attributes)
        .footer__top
            .footer__wrap
                .footer__about
                    .footer__about-company
                        .footer__logo-wrap
                            +logo({
                                mix: 'footer__logo',
                                secondary: true,
                                mod: 'secondary'
                            })
                        +el({
                            tag: 'p',
                            class: 'footer__text',
                            mod: 'info',
                            text: 'Крупнейший отечественный </br>производитель и поставщик <br>табачных изделий'
                        })
                    .footer__about-contacts
                        .footer__phone-wrap
                            +el({
                                tag: 'a',
                                class: 'header__phone',
                                href: 'tel:+79785001445',
                                text: '+7 (978) 500-14-45',
                            })
                        +el({
                            tag: 'p',
                            class: 'footer__text',
                            mod: 'address',
                            text: 'Респ. Крым, г. Симферополь, <br>ул. Набережная им. 60-летия </br>СССР, д.34'
                        })
                .footer__nav
                    .footer__nav-company(role='navigation' aria-label='Дополнительное меню' itemscope itemtype='http://schema.org/SiteNavigationElement')
                        h4.footer__title Компания
                        +el({
                            tag: 'ul',
                            class: 'footer__list',
                        })
                            each item in companyNav
                                +el({
                                    tag: 'li',
                                    class: 'footer__item',
                                })(itemprop='name')
                                    +el({
                                        tag: 'a',
                                        text: item,
                                    })(itemprop='url')
                    .footer__nav-production(role='navigation' aria-label='Дополнительное меню' itemscope itemtype='http://schema.org/SiteNavigationElement')
                        h4.footer__title Продукция
                        .footer__nav-production-row
                            +el({
                                tag: 'ul',
                                class: 'footer__list',
                            })
                                each item in productionNav1
                                    +el({
                                        tag: 'li',
                                        class: 'footer__item',
                                    })(itemprop='name')
                                        +el({
                                            tag: 'a',
                                            text: item,
                                        })(itemprop='url')
                            +el({
                                tag: 'ul',
                                class: 'footer__list',
                            })
                                each item in productionNav2
                                    +el({
                                        tag: 'li',
                                        class: 'footer__item',
                                    })(itemprop='name')
                                        +el({
                                            tag: 'a',
                                            text: item,
                                        })(itemprop='url')
        .footer__bottom
            .footer__wrap
                .footer__copyright
                    +el({
                        tag: 'p',
                        class: 'footer__text',
                        text: 'г. Симферополь &copy;&nbsp;Copyright 2019&nbsp;г.'
                    })
                .footer__notify
                    +el({
                        tag: 'p',
                        class: 'footer__text',
                        mod: 'uppercase',
                        text: 'Минздрав предупреждает курение опасно для вашего здоровья'
                    })
                .footer__madein
                    | Сделанo в
                    +el({
                        tag: 'a',
                        title: 'Sheer',
                        href: 'https://sheer82.ru/'
                    })
                        span.hidden 'Sheer'
                        +el({
                            tag: 'svg',
                            icon: 'sheer',
                        })
