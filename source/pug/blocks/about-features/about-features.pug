mixin about-features(data)
    +el({
        tag: 'section',
        class: 'about-features',
        mod: data.mod,
        mix: data.mix,
        js: data.js,
    })&attributes(attributes)
        .about-features__wrap
            h2.about-features__heading Производственная мощность и&nbsp;возможности компании
            ul.about-features__list
                each item in aboutFeatures
                    +el({
                        tag: 'li',
                        class: 'about-features__item',
                    })
                        +item-w-number({
                            number: item.number,
                            descr: item.descr,
                            text: item.text,
                        })
